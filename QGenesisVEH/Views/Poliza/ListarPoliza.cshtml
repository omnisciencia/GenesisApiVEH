@{
    ViewBag.Title = "ListarPoliza";
}
@*<link href="~/Content/Modulo/Consulta/Poliza.css" rel="stylesheet" />*@
<link href="~/Content/Modulo/Consulta/Inspeccion.css" rel="stylesheet" />
<div style="height:10px;"></div>
<h4>Listado de Poliza &nbsp;&nbsp;<i class="fas fa-list-alt" style="font-size:25px;"></i></h4>
<div class="alert-inspeccion" role="alert" style="width:95%; margin:auto;">
    <div class="row">
        <form>
            <div class="form-row">
                <div class="col" style="text-align:left;">
                    <label class="col-form-label col-form-label-sm">Nro. Poliza:</label>
                    <input id="idpoliza" type="text" class="form-control form-control-sm">
                </div>
                <div class="col" style="text-align:left;">
                    <label class="col-form-label col-form-label-sm">Contratante:</label>
                    <input id="contratante" type="text" class="form-control form-control-sm">
                </div>
                <div class="col" style="text-align:left;">
                    <label class="col-form-label col-form-label-sm">Placa:</label>
                    <input id="placa" type="text" class="form-control form-control-sm">
                </div>
                <div class="col" style="text-align:left;">
                    <label class="col-form-label col-form-label-sm"><input type="checkbox" name="fec_ini" id="chk_fec_ini" checked>Fecha Inicial:</label>
                    <input id="fechaini" type="date" class="form-control form-control-sm">
                </div>
                <div class="col" style="text-align:left;">
                    <label class="col-form-label col-form-label-sm">Fecha Fin:</label>
                    <input id="fechafin" type="date" class="form-control form-control-sm">
                </div>
                <div class="col-sm-1" style="margin-top:1.8rem;">
                    <input id="btnBuscar" type="button" value="Buscar" class="btn_customer btn-secondary" />
                </div>
                <div class="col-sm-1" style="margin-top:1.8rem;text-align:left;">
                    <input id="btnLimpiar" type="button" value="Limpiar" class="btn_customer btn-secondary" />
                </div>
                <div class="col-sm-1" style="margin-top:1.8rem;text-align:left;">
                    <input id="btnNuevo" type="button" value="Nuevo" class="btn_customer btn-secondary" />
                </div>
                <div class="col-sm-1" style="margin-top:1.8rem;text-align:left;">
                    @*<input onclick="exportarExcel()" id="btnExportar" type="button" value="Exportar" class="btn_customer btn-success" />*@
                    <a onclick="exportarExcel()" class="btn_customer btn-success">
                        Exportar&nbsp;&nbsp;
                        <i class="fas fa-file-excel"></i>
                    </a>
                </div>

            </div>
        </form>
    </div>
</div>
<div style="height:15px;"></div>
<div style="width:95%;margin:auto; background:#fff;">
    @*<table>
        <tfoot>
            <tr>
                <td colspan="2">*@
    <div class="row" style="padding-left:91%;">
        <div>
            <input class="btn_filter btn-secondary btn_left" id="Anterior" type="button" value="<" />
        </div>
        <div>
            <select class="form-control input-sm" id="Pagina" name="Pagina" style="border-radius:0;">
                <option value="1">1</option>
            </select>
        </div>
        <div>
            <input class="btn_filter btn-secondary btn_rigth" id="Siguiente" type="button" value=">" />
        </div>
    </div>
    @*</td>
                </tr>
            </tfoot>
        </table>*@

    <table class="table table-sm table-hover" id="GridListar"></table>
    <table id="table_export" style="display:none;">
        <thead>
            <tr>
                <th>Número de Poliza</th>
                <th>Contratante</th>
                <th>Placa</th>
                <th>Fecha de Emisión</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody id="bodyExport"></tbody>
    </table>

</div>

<!--Init Scripts-->
<script type="text/javascript" src="~/Scripts/jquery-1.10.2.min.js"></script>
<script type="text/javascript" src="~/Scripts/Genesis/Poliza/ListarPoliza.js"></script>
<!--End Scripts-->
